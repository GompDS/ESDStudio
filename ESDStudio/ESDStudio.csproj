<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net6.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\SoulsFormats\SoulsFormats\SoulsFormats.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="esdtool\SoulsIds\**" />
      <Compile Remove="esdtool\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="esdtool\SoulsIds\**" />
      <EmbeddedResource Remove="esdtool\**" />
      <EmbeddedResource Include="ESDLang.xshd" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="esdtool\SoulsIds\**" />
      <None Remove="esdtool\**" />
    </ItemGroup>

    <ItemGroup>
      <Page Remove="esdtool\SoulsIds\**" />
      <Page Remove="esdtool\**" />
    </ItemGroup>
    
    <ItemGroup>
        <CopyESDTool Include="esdtool/**/**/*" />
        <CopyDefaultDescriptions Include="DefaultDescriptions/*" />
        <CopyResources Include="Resources/*" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="AvalonEdit" Version="6.3.0.90" />
      <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.0-preview1" />
      <PackageReference Include="Ookii.Dialogs.Wpf" Version="5.0.1" />
      <PackageReference Include="PresentationFramework.Aero2" Version="1.0.1" />
      <PackageReference Include="Tomlyn" Version="0.16.2" />
    </ItemGroup>
    
    <Target Name="CopyFiles" AfterTargets="AfterBuild">
        <Copy SourceFiles="@(CopyESDTool)" DestinationFolder="bin\Debug\net6.0-windows\esdtool\%(RecursiveDir)" />
        <Copy SourceFiles="@(CopyDefaultDescriptions)" DestinationFolder="bin\Debug\net6.0-windows\DefaultDescriptions\%(RecursiveDir)" />
        <Copy SourceFiles="@(CopyResources)" DestinationFolder="bin\Debug\net6.0-windows\Resources\%(RecursiveDir)" />
    </Target>

</Project>
